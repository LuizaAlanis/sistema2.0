@model RestauranteMexicano.Areas.ADM.Models.Produto

@{
    ViewBag.Title = "Details";
}

<div class="animated animatedFadeInUp fadeInUp">
    <div class="tabela">
        <br>
        <div class="primeira">
            <img src="~/Content/imagens/taco.GIF" width="100%" height="100%" />
        </div>
        <div class="segunda">
            @using (Html.BeginForm())
            {

                @Html.AntiForgeryToken()

                @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                @Html.LabelFor(model => model.idCategoria, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.idCategoria, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                @Html.LabelFor(model => model.valor, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.valor, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                @Html.LabelFor(model => model.info, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.info, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                @Html.LabelFor(model => model.validade, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.validade, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                @Html.LabelFor(model => model.quantidade, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.quantidade, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                @Html.LabelFor(model => model.promocao, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.promocao, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })



                @Html.ActionLink("Voltar", "Index")

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }

            }
        </div>
    </div>
</div>