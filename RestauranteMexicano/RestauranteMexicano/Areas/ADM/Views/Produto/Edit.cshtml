@model RestauranteMexicano.Areas.ADM.Models.Produto

@{
    ViewBag.Title = "Edit";
}


<div class="animated animatedFadeInUp fadeInUp">
    <div class="tabela">
        <br>
        <div class="primeira">
            <!-- <a href='https://www.freepik.com/vectors/food'>Food vector created by freepik - www.freepik.com</a> -->
            <img src="~/Content/imagens/food.GIF" width="100%" height="100%" />
        </div>
        <div class="segunda">
            @using (Html.BeginForm())
            {

                @Html.HiddenFor(model => model.id)
           
                @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })

                @Html.LabelFor(model => model.idCategoria, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.idCategoria, new { htmlAttributes = new { @class = "form-control" } })     
                
                @Html.LabelFor(model => model.valor, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.valor, new { htmlAttributes = new { @class = "form-control" } })
                 
                @Html.LabelFor(model => model.info, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.info, new { htmlAttributes = new { @class = "form-control" } })    
                 
                @Html.LabelFor(model => model.validade, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.validade, new { htmlAttributes = new { @class = "form-control" } })  
           
                @Html.LabelFor(model => model.quantidade, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.quantidade, new { htmlAttributes = new { @class = "form-control" } })
      
                @Html.LabelFor(model => model.promocao, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.promocao, new { htmlAttributes = new { @class = "form-control" } })

                <input type="submit" value="Atualizar" class="button" function />

                @Html.ActionLink("Visualizar todos", "Index")

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }

            }
        </div>
    </div>
</div>