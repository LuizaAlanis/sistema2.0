@model RestauranteMexicano.Areas.ADM.Models.Relatorio

@{
    ViewBag.Title = "Details";
}

<div class="animated animatedFadeInUp fadeInUp">
    <div class="tabela">
        <br>
        <div class="primeira">
            <img src="~/Content/imagens/relatorio.svg" width="100%" height="100%" />
        </div>
        <div class="segunda">
            @using (Html.BeginForm())
            {

                @Html.LabelFor(model => model.dataRelatorio, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.dataRelatorio, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                @Html.LabelFor(model => model.autor, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.autor, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                @Html.LabelFor(model => model.departamento, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.departamento, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                @Html.LabelFor(model => model.titulo, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                @Html.LabelFor(model => model.corpo, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.corpo, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
               
                @Html.ActionLink("Voltar", "Index")

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }

            }
        </div>
    </div>
</div>