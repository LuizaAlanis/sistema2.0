@model RestauranteMexicano.Areas.Vendas.Models.Delivery

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="animated animatedFadeInUp fadeInUp">
    <div class="tabela">
        <br>
        <div class="primeira">
            <img src="~/Content/imagens/delivery.png" width="100%" height="100%" />
        </div>
        <div class="segunda">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.LabelFor(model => model.id, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control" } })

                @Html.LabelFor(model => model.data, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.data, new { htmlAttributes = new { @class = "form-control" } })


                @Html.LabelFor(model => model.total, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.total, new { htmlAttributes = new { @class = "form-control" } })

                @Html.LabelFor(model => model.destinatario, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.destinatario, new { htmlAttributes = new { @class = "form-control" } })

                @Html.LabelFor(model => model.endereco, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.endereco, new { htmlAttributes = new { @class = "form-control" } })

                <input type="submit" class="button" style="padding:10px;" value="Gravar" />
                @Html.ActionLink("Back to List", "Index")
            }
        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>