@model RestauranteMexicano.Areas.Vendas.Models.ItensComanda

@{
    ViewBag.Title = "AdicionarItens";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="animated animatedFadeInUp fadeInUp">
    <div class="tabela">
        <br>
        <div class="primeira">
            <img src="~/Content/imagens/reservas.jpg" width="100%" height="100%" />
        </div>
        <div class="segunda">
            <h2>Adicione um item para o pedido</h2>
            <br /><br />
            @using (Html.BeginForm())
            {

                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
          
                @Html.LabelFor(model => model.idComanda, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.idComanda, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.idComanda, "", new { @class = "text-danger" })
                   
                @Html.LabelFor(model => model.idProduto, htmlAttributes: new { @class = "control-label col-md-2" })           
                @Html.EditorFor(model => model.idProduto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.idProduto, "", new { @class = "text-danger" })     
        
                @Html.LabelFor(model => model.quantidade, htmlAttributes: new { @class = "control-label col-md-2" })               
                @Html.EditorFor(model => model.quantidade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.quantidade, "", new { @class = "text-danger" })                  
              
                <input type="submit" class="button" style="padding:10px;" value="Gravar" />
            @Html.ActionLink("Voltar", "Index")
            }
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
            <script src="~/Scripts/mouse.js"></script>
        }

    </div>
</div>
