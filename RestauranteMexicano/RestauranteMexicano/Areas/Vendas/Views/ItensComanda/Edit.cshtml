@model RestauranteMexicano.Areas.Vendas.Models.ItensComanda

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="animated animatedFadeInUp fadeInUp">
    <div class="tabela">
        <br>
        <div class="primeira">
            <img src="~/Content/imagens/reservas.jpg" width="100%" height="100%" />
        </div>
        <div class="segunda">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.LabelFor(model => model.idComanda, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.idComanda, new { htmlAttributes = new { @class = "form-control" } })

                @Html.LabelFor(model => model.idProduto, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.idProduto, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })

                @Html.LabelFor(model => model.quantidade, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.quantidade, new { htmlAttributes = new { @class = "form-control" } })

                <input type="submit" value="Atualizar" class="button" function />

                @Html.ActionLink("Visualizar todos", "Index")

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }

            }
        </div>
    </div>
</div>
