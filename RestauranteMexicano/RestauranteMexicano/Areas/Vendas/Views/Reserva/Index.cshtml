            <th>
                @Html.DisplayNameFor(model => model.idMesa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantidadeCadeiras)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataReserva)
            </th>
